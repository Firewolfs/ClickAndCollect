{% extends 'base.html.twig' %}
{% block body %}
    <h2>Gérer les commandes :</h2>
    {% for commande in commandes %}
        <div class="card mt-5">
            <div class="card-body">
                <div class="card-title">
                    <p>Commande numéro : {{ commande.id }}</p>
                </div>
                <hr>
                <div class="row text-center">
                    <div class="col">
                        <h5 class="">Magasin</h5>
                        <p>{{ commande.magasin.nom }}</p>
                    </div>
                    <div class="col">
                        <h5 class="">Prix</h5>
                        <p>{{ commande.prixTotal }}€</p>
                    </div>
                    <div class="col">
                        <h5 class="">Etat</h5>
                        <p>{{ commande.etat.label }}</p>
                    </div>
                    <div class="col">
                        <a href="{{ path('commande_gerer_etat', {id: commande.id}) }}"><button class="btn btn-primary">Changer etat</button></a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}