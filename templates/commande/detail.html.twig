{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-9">
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h3 class="card-title mb-5">{{ commandes|length > 1 ? 'Mes Commandes' : 'Ma Commande' }}</h3>
                    {% for commande in commandes %}
                        <div class="card shadow-sm mt-3 mb-4">
                            <div class="card-body">
                                <h4 class="card-title">Votre commande N° {{ commande.id }}</h4>
                                <div class="text-right">
                                    <small class="card-title text-right">Commande pour le magasin <strong>{{ commande.magasin.nom }}</strong></small>
                                </div>

                                <p class="card-text">Facturation :<br>
                                    <span style="font-size: 14px; margin-left: 20px;">{{ client.nom ~ ' ' ~ client.prenom }}</span>
                                </p>

                            </div>
                        </div>
                    {% else %}
                        <h3 class="card-text text-center">Votre panier est vide !</h3>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">Total de ma commande <span class="text-right">null €</span></h5>
                </div>
            </div>
        </div>
    </div>

{% endblock %}